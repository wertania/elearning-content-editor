# Build stage
FROM node:lts-alpine as build-stage
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

# Set environment variables
ARG VITE_BASE_LANGUAGE
ARG VITE_AVAILABLE_LANGUAGES
ARG VITE_DOCUMENT_DATASOURCE
ARG VITE_POCKETBASE_URL
ARG VITE_OPENAI_KEY
ARG VITE_VIDEOCONVERTER_URL
ARG VITE_TEMPLATE_START_LOGO
ARG VITE_TEMPLATE_WELCOME_SLOGAN
ARG VITE_TEMPLATE_APP_NAME
ARG VITE_TEMPLATE_LOGO_URL

ENV VITE_BASE_LANGUAGE $VITE_BASE_LANGUAGE
ENV VITE_AVAILABLE_LANGUAGES $VITE_AVAILABLE_LANGUAGES
ENV VITE_DOCUMENT_DATASOURCE $VITE_DOCUMENT_DATASOURCE
ENV VITE_POCKETBASE_URL $VITE_POCKETBASE_URL
ENV VITE_OPENAI_KEY $VITE_OPENAI_KEY
ENV VITE_VIDEOCONVERTER_URL $VITE_VIDEOCONVERTER_URL
ENV VITE_TEMPLATE_START_LOGO $VITE_TEMPLATE_START_LOGO
ENV VITE_TEMPLATE_WELCOME_SLOGAN $VITE_TEMPLATE_WELCOME_SLOGAN
ENV VITE_TEMPLATE_APP_NAME $VITE_TEMPLATE_APP_NAME
ENV VITE_TEMPLATE_LOGO_URL $VITE_TEMPLATE_LOGO_URL

# Build the app
RUN npm run build

# Production stage
FROM nginx:stable-alpine as production-stage
COPY --from=build-stage /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
